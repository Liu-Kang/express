<!DOCTYPE html>
<html>
	<%- include head %>
	<link rel="stylesheet" href="/css/user.css" />
	<body>
		<canvas class="pagebg" id="index-canvas" width="100%" height="100%"></canvas>
		<section  class="container">
			<div class="head-op clearfix">
				<% if(user.userid){ %>
				<span class="fl">
					<span class="mr10">欢迎你，<%= user.username %></span>
				</span>
				<a class="fr" href="/">首页</a>
				<% } %>
			</div>
			<ul class="record-list">
				<% user.records.forEach(function(record){ %>
				<li class="record-sg clearfix" data-rid="<%= record.rid %>">
					<div class="ellipsis fl record-title"><%= record.title %></div>
					<div class="fr record-cdate"><%= moment(record.cdate).format('MM/DD') %></div>
				</li>
				<% }); %>
			</ul>
		</section>
		<section class="bottom-btn">
			<a href="/edit" class="btn go-express">go Express</a>
		</section>
	</body>
	<script type="text/javascript" src="/js/userMain.js"></script>
</html>
