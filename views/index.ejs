		<canvas class="pagebg" id="index-canvas" width="100%" height="100%"></canvas>
		<section  class="container">
			<div class="cfff head-op clearfix">
				<% if(user.userid){ %>
				<span class="fl">
					<span class="mr10">欢迎你，<%= user.username %></span>
				</span>
				<a class="cfff fr" href="/<%= user.userid %>">我的主页</a>
