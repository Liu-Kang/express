				<span class="fr cfff">
					<a href="/login" class="cfff">登录</a>&nbsp;/&nbsp;<a href="/regist" class="cfff">注册</a>
				</span>
				<% } %>
			</div>
		</section>
	</body>
	<script type="text/javascript" src="/js/lib/neon.js"></script>
	<script type="text/javascript" src="/js/indexMain.js"></script>
</html>
